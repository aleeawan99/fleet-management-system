<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/mileag_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:drawableLeft="@drawable/mileage_icon"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/forward_icon"
        android:gravity="center_vertical"
        android:text="00.00 Mileage (km)"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:background="#9e9e9e"
        app:layout_constraintTop_toBottomOf="@id/mileag_btn" />

    <TextView
        android:id="@+id/fuel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/fuel_icon"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/forward_icon"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:text=" - Fuel Consumption (km/L)"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/mileag_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:background="#9e9e9e"
        app:layout_constraintTop_toBottomOf="@id/fuel_btn" />

    <TextView
        android:id="@+id/driving_time_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:padding="8dp"
        android:drawableLeft="@drawable/time_icon"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/forward_icon"
        android:gravity="center_vertical"
        android:text="00.00 Driving Time (hr)"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/fuel_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:background="#9e9e9e"
        app:layout_constraintTop_toBottomOf="@id/driving_time_btn" />

    <TextView
        android:id="@+id/bad_driving_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:padding="8dp"
        android:drawableLeft="@drawable/bad_driving_icon"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/forward_icon"
        android:gravity="center_vertical"
        android:text="00 Total bad driving behaviour (times)"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/driving_time_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/view3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:background="#9e9e9e"
        app:layout_constraintTop_toBottomOf="@id/bad_driving_btn" />


</android.support.constraint.ConstraintLayout>